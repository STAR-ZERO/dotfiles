set pasteboard
set incsearch
set ignorecase
set smartcase

imap <C-j> <Down>
imap <C-k> <Up>
imap <C-h> <Left>
imap <C-l> <Right>

nmap <C-j> :xccm jumpToNextCounterpart<CR>
nmap <C-k> :xccm jumpToPreviousCounterpart<CR>

nmap <C-h> :xccm goBackInHistoryByCommand<CR>
nmap <C-l> :xccm goForwardInHistoryByCommand<CR>
