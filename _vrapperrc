set ignorecase
set smartcase
set clipboard=unnamed

nnoremap n nzz
nnoremap N Nzz
nnoremap * *zz
nnoremap # #zz
nnoremap g* g*zz
nnoremap g# g#zz

nnoremap mi :OrganizeImports<CR>
nnoremap mg :GetterSetter<CR>
nnoremap mm :OverrideMethods<CR>
nnoremap mr :Rename<CR>
nnoremap sr :SearchReferences<CR>

" Source -> Organize Imports
eclipseaction OrganizeImports org.eclipse.jdt.ui.edit.text.java.organize.imports
" Source -> Generate Getters and Setters
eclipseaction GetterSetter org.eclipse.jdt.ui.edit.text.java.create.getter.setter
" Source -> Orverride/Implements Methods
eclipseaction OverrideMethods org.eclipse.jdt.ui.edit.text.java.override.methods
" Refactor -> Rename
eclipseaction Rename org.eclipse.jdt.ui.edit.text.java.rename.element
" Search -> References
eclipseaction SearchReferences org.eclipse.jdt.ui.edit.text.java.search.references.in.project
