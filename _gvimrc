if has('gui_macvim')
    "タブを常に表示
    set showtabline=2
    "自動IMをOFF
    set imdisable
    "起動時のウィンドウサイズ
    set lines=80 columns=200
    "アンチエイリアス
    set antialias
    "フォント
    set guifont=Ricty\ for\ Powerline:h16
    "バックアップを取らない
    set nobackup
    "ツールバーを非表示
    set guioptions-=T
    "カラースキーム
    colorscheme Tomorrow-Night
    "コマンドラインの高さ
    set cmdheight=2
    "PATH
    let ZSH_PATH = '/bin/zsh'
    if executable(ZSH_PATH)
      let ZSH_ENV_PATH = system(ZSH_PATH . " -c 'source ~/.zshrc; echo $PATH'")
      let $PATH = ZSH_ENV_PATH
    endif
endif
